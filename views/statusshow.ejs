<% include ./header %>

<header class="intro-header" style="background-image: url('/images/旗袍.jpg')">
       <div class="container">
           <div class="row">
               <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                   <div class="post-heading">
                       <h1>Status</h1>

                   </div>
               </div>
           </div>
       </div>
   </header>

   <!-- Post Content -->

       <div class="container">

           <div class="row">
               <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                  <h3>
                    SID:<%= status.SID %>
                  </h3>
                  <h3>
                    Name:<%= status.Name %>
                  </h3>
                  <h3>
                    Department:<%= status.Department %>
                  </h3>
                  <h3>
                    Grade:<%= status.Grade %>
                  </h3>
                  <h3>
                    Sex:<%= status.Sex %>
                  </h3>
                  <h3>
                    Phone:<%= status.Phone %>
                  </h3>
                  <h3>
                    Email:<%= status.Email %>
                  </h3>
                  <h3>
                    MyHr:<%= status.myhr %>
                  </h3>
               </div>
           </div>

       </div>
       <%if(global.member){%>
        <div class="col-lg-4 col-lg-offset-5 col-md-10 col-md-offset-1">

       <form action ="/statusshow/show" method="POST">

          <button type="submit" class="btn btn-default">Show All Status</button>
       </form>
     </div>
       <%}%>
   <hr>
<% include ./footer %>
